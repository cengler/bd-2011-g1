% ------- Apertura del MR -------------------------------------------------
%
% Uso:  \mrcom{nombre del MR}{}
%
\def\mrcom#1#2{\begin{framed}#2\parindent=\mrmargen\vskip\mrtitskip\noindent%
\hbox to \hsize{{\bf MR: } #1\hfil}\vskip0.3cm}


% ------- Clausura del MR -------------------------------------------------
%
% Uso:  \mrfin
%
\def\mrfin{\vskip\mrtitskip\par\noindent%
\hbox to \hsize{{\bf Fin MR}\hfil}\vskip\mrtitskip\end{framed}}


% **************************************************************************
% DEF PUBLICAS
% **************************************************************************

\def\pk#1{\uline{#1}}
\def\fk#1{\dashuline{#1}}
\def\pfk#1{\uline{\dashuline{#1}}}

% ------- Entidades ---------------------------------
%
% Uso:  \entidad{entidad}{parametros separados por ,} (se puede usar \pk \fk \pfk)
%
\def\entidad#1#2{\vskip0.5em{\bf #1: }({#2})}


\def\entidadPK#1{\vskip0em{\bf PK: } \{#1\}}

\def\entidadCK#1{\vskip0em{\bf CK: } \{#1\}}

\def\entidadFK#1{\vskip0em{\bf FK: } \{#1\}}

% ------- DECLARACIÓN DEL ENTORNO 'mr' ------------------------------------
%
% Uso:  \begin{mr}{nombre del MR}                    (Requiere LaTeX)
%          ...
%       \end{mr}
%
\newenvironment{mr}[1]{\mrcom{#1}{}}{\mrfin}

\def\mrenc#1#2{\dimen0=\mrmaxenc\advance\dimen0 by \mrmargen%
\vskip\mrtitskip\par\hangindent=\dimen0\hangafter=1\hskip0pt%
\hbox to \mrmaxenc{{\bf #1}\hfil}#2}

